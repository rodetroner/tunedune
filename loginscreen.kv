#:kivy 1.10.1
#: import loginscreen loginscreen

<LoginScreen>:
    login_input: _login_input
    password_input: _password_input
    BoxLayout:
        padding: 20
        spacing: 5
        orientation: 'vertical'
        Widget:
            size_hint: 1, .3
        TextInput:
            id: _login_input
            text: 'Username'
            size_hint: 1, .05
            on_focus: root.clearLogin(*args)
        TextInput:
            id: _password_input
            text: 'Password'
            size_hint: 1, .05
            on_focus: root.clearPassword(*args)
        Widget:
            size_hint: 1, .05
        Button:
            id: _submit
            text: 'Log in'
            size_hint: 1, .05
            on_press:
                root.logInAction(*args)
                root.manager.transition.direction = 'left'
                root.manager.current = 'MainScreen'
        Button:
            id: _register
            text: 'Register'
            size_hint: 1, .05
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'RegisterScreen'
        Widget:
            size_hint: 1, .1
