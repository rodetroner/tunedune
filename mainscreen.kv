#:kivy 1.10.1
#:import mainscreen mainscreen 

<MainScreen>:
    search_tracks_field: _search_tracks_field
    search_albums_field: _search_albums_field
    BoxLayout
        padding: 20
        spacing: 5 
        orientation: 'vertical'
        Label:
            id: _app_name
            text: 'TuneDune'
            size_hint: 1, .2
        BoxLayout:
            spacing: 5
            orientation: 'horizontal'
            size_hint: 1, .05
            TextInput:
                id: _search_tracks_field
                text: 'Search tracks...'
                size_hint: 0.7, 1 
                on_focus: root.clearSearchTracks(*args)
            Button:
                id: _search_tracks_button
                text: 'Go'
                size_hint: 0.3, 1 
                on_press:
                    root.searchTracks(*args)
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Tracks'
        BoxLayout:
            spacing: 5
            orientation: 'horizontal'
            size_hint: 1, .05
            TextInput:
                id: _search_albums_field
                text: 'Search albums...'
                size_hint: 0.7, 1 
                on_focus: root.clearSearchAlbums(*args)
            Button:
                id: _search_albums_button
                text: 'Go'
                size_hint: 0.3, 1 
                on_press:
                    root.searchAlbums(*args)
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Albums'
        Button:
            id: _ads_button
            text: 'Ads'
            size_hint: 1, .05
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Ads'
        Button:
            id: _user
            text: 'My account'
            size_hint: 1, .05
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'User'
        Button:
            id: _logout
            text: 'Log out'
            size_hint: 1, .05
            on_press:
                root.logOut(*args)
                root.manager.transition.direction = 'right'
                root.manager.current = 'LoginScreen'
