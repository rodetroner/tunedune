#:kivy 1.10.1

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: 'Username'
            on_focus: self.text = ''
        TextInput:
            text: 'Password'
            on_focus: self.text = ''
        Button:
            text: 'Log in'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'main_scr'
        
    
<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        Sidebar:
            id: _sidebar
